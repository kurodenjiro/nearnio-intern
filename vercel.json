{
  "version": 2,
  "public": true,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "api/index.ts"
    }
  ],
  "redirects": [{ "source": "/", "destination": "/api", "permanent": false }],
  "crons": [
    {
      "path": "/api/cron/sync",
      "schedule": "0 */3 * * *"
    },
    {
      "path": "/api/cron/notifications",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/reminders",
      "schedule": "*/30 * * * *"
    }
  ]
}
