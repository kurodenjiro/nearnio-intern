{
  "name": "nearn-notifications-bot",
  "version": "1.0.0",
  "description": "Telegram bot for Nearn bounty notifications",
  "main": "src/index.ts",
  "author": "Mark Pavlov (https://github.com/sollidy)",
  "homepage": "https://github.com/sollidy/telegram-bot-vercel-boilerplate",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@vercel/node": "^5.1.16",
    "dotenv-cli": "^8.0.0",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/node": "^22.8.6",
    "@vercel/ncc": "^0.38.2",
    "debug": "^4.3.7",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "prisma": "^5.7.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "scripts": {
    "dev": "DEBUG=bot* dotenv -- nodemon -e ts -x ts-node src/index.ts",
    "devWindows": "@powershell -Command $env:DEBUG='bot*';dotenv -- -- nodemon -e ts -x ts-node src/index.ts",
    "build": "prisma generate && ncc build src/index.ts -o public -m",
    "prettier": "prettier --write 'src/**/*.ts'",
    "lint": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "mock-api": "ts-node scripts/start-mock-api.ts",
    "mock-api:dev": "nodemon -e ts -x ts-node scripts/start-mock-api.ts",
    "test-mock": "ts-node scripts/test-mock-api.ts",
    "test-reminders": "ts-node scripts/test-reminders.ts",
    "test-reminder-button": "ts-node scripts/test-reminder-button.ts",
    "test-reminder-messages": "ts-node scripts/test-reminder-messages.ts",
    "test-markdown": "ts-node scripts/test-markdown-escaping.ts",
    "test-vercel-cron": "ts-node scripts/test-vercel-cron.ts",
    "test-null-reward": "ts-node scripts/test-null-reward.ts",
    "debug-sync": "ts-node scripts/debug-sync.ts",
    "check-database": "ts-node scripts/check-database.ts",
    "debug-sync-detailed": "ts-node scripts/debug-sync-detailed.ts",
    "test-prisma-direct": "ts-node scripts/test-prisma-direct.ts",
    "test-sponsorship": "ts-node scripts/test-sponsorship.ts",
    "test-submission-reminders": "ts-node scripts/test-submission-reminders.ts",
    "test-buttons": "ts-node scripts/test-buttons.ts",
    "test-categories-removal": "ts-node scripts/test-categories-removal.ts",
    "test-bounty-keyboard": "ts-node scripts/test-bounty-keyboard.ts",
    "test-back-navigation": "ts-node scripts/test-back-navigation.ts"
  }
}
